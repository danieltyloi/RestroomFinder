<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_location"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="82dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
    <android.support.v7.widget.CardView
        android:background="@color/colorAccentOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/switchDimen"
        app:cardCornerRadius="7dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:background="@android:color/white"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:paddingTop="3dp"
                android:paddingLeft="@dimen/switchsideDimen"
                android:paddingRight="@dimen/switchsideDimen"
                android:paddingBottom="-2dp"
                android:textCursorDrawable="@null"
                android:id="@+id/newMrk_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/enter_restroom_name_here"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="@color/colorAccentTwo"
                android:textSize="50sp"
                tools:ignore="RtlCompat" />

            <Switch
                android:textSize="@dimen/switchTextSize"
                android:paddingTop="@dimen/switchDimen"
                android:paddingLeft="@dimen/switchsideDimen"
                android:paddingRight="@dimen/switchsideDimen"
                android:paddingBottom="@dimen/switchbottomDimen"
                android:id="@+id/unisexBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="gender neutral" />

            <Switch
                android:textSize="@dimen/switchTextSize"
                android:paddingTop="@dimen/switchDimen"
                android:paddingLeft="@dimen/switchsideDimen"
                android:paddingRight="@dimen/switchsideDimen"
                android:paddingBottom="@dimen/switchbottomDimen"
                android:id="@+id/paperTowelBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="paper towels" />

            <Switch
                android:textSize="@dimen/switchTextSize"
                android:paddingTop="@dimen/switchDimen"
                android:paddingLeft="@dimen/switchsideDimen"
                android:paddingRight="@dimen/switchsideDimen"
                android:paddingBottom="@dimen/switchbottomDimen"
                android:id="@+id/airDryerBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="air dryer" />

            <Switch
                android:textSize="@dimen/switchTextSize"
                android:paddingTop="@dimen/switchDimen"
                android:paddingLeft="@dimen/switchsideDimen"
                android:paddingRight="@dimen/switchsideDimen"
                android:paddingBottom="@dimen/switchbottomDimen"
                android:id="@+id/handicapBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="handicap accessible" />

            <Switch
                android:textSize="@dimen/switchTextSize"
                android:paddingTop="@dimen/switchDimen"
                android:paddingLeft="@dimen/switchsideDimen"
                android:paddingRight="@dimen/switchsideDimen"
                android:paddingBottom="@dimen/switchbottomDimen"
                android:id="@+id/vendingmachinBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tampon vending machine" />

            <Switch
                android:textSize="@dimen/switchTextSize"
                android:paddingTop="@dimen/switchDimen"
                android:paddingLeft="@dimen/switchsideDimen"
                android:paddingRight="@dimen/switchsideDimen"
                android:paddingBottom="@dimen/switchbottomDimen"
                android:id="@+id/changingTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="baby changing table" />

            <Button
                android:layout_margin="@dimen/switchDimen"
                android:textSize="@dimen/switchTextSize"
                android:backgroundTint="@color/colorAccent"
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="add"
                android:text="add" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:text=""
                android:textColor="@android:color/white" />
        </LinearLayout>


    </android.support.v7.widget.CardView>




</LinearLayout>
