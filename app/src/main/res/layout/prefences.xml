<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pref"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="82dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
    <android.support.v7.widget.CardView
        android:background="@color/colorAccentOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/switchDimen"
        app:cardCornerRadius="7dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/btm_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:text="Preferences"
                android:paddingLeft="@dimen/switchsideDimen"
                android:paddingTop="3dp"
                android:paddingRight="@dimen/switchsideDimen"
                android:paddingBottom="-2dp"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />


            <Switch
                android:id="@+id/unisexBtnPref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/switchsideDimen"
                android:paddingTop="@dimen/switchDimen"
                android:paddingRight="@dimen/switchsideDimen"
                android:paddingBottom="@dimen/switchbottomDimen"
                android:text="Gender Neutral/Unisex"
                android:textSize="@dimen/switchTextSize" />

            <Switch
                android:id="@+id/paperTowelBtnPref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/switchsideDimen"
                android:paddingTop="@dimen/switchDimen"
                android:paddingRight="@dimen/switchsideDimen"
                android:paddingBottom="@dimen/switchbottomDimen"
                android:text="Paper Towels"
                android:textSize="@dimen/switchTextSize" />

            <Switch
                android:id="@+id/airDryerBtnPref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/switchsideDimen"
                android:paddingTop="@dimen/switchDimen"
                android:paddingRight="@dimen/switchsideDimen"
                android:paddingBottom="@dimen/switchbottomDimen"
                android:text="Air Dryer"
                android:textSize="@dimen/switchTextSize" />

            <Switch
                android:id="@+id/handicapBtnPref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/switchsideDimen"
                android:paddingTop="@dimen/switchDimen"
                android:paddingRight="@dimen/switchsideDimen"
                android:paddingBottom="@dimen/switchbottomDimen"
                android:text="Handicap Accessible"
                android:textSize="@dimen/switchTextSize" />

            <Switch
                android:id="@+id/vendingmachinBtnPref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/switchsideDimen"
                android:paddingTop="@dimen/switchDimen"
                android:paddingRight="@dimen/switchsideDimen"
                android:paddingBottom="@dimen/switchbottomDimen"
                android:text="Tampon Vending Machine"
                android:textSize="@dimen/switchTextSize" />

            <Switch
                android:id="@+id/changingTablePref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/switchsideDimen"
                android:paddingTop="@dimen/switchDimen"
                android:paddingRight="@dimen/switchsideDimen"
                android:paddingBottom="@dimen/switchbottomDimen"
                android:text="Baby Changing Station"
                android:textSize="@dimen/switchTextSize" />

            <Button
                android:layout_margin="@dimen/switchDimen"
                android:textSize="@dimen/switchTextSize"
                android:backgroundTint="@color/colorAccent"
                android:id="@+id/accept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="accept"
                android:text="accept" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:text=""
                android:textColor="@android:color/white" />
        </LinearLayout>


    </android.support.v7.widget.CardView>




</LinearLayout>
